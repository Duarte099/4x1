RewriteEngine On

# Redirecionar URLs com .php para a versão sem .php (com redirecionamento 301 permanente)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^\s]+)\.php\sHTTP
RewriteRule ^(.*)\.php$ /$1 [R=301,L]

# Reescrever URLs sem extensão para o ficheiro .php correspondente
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]